# Application settings
PORT=8080
RUN_MODE=local

# Database settings (Railway will provide DATABASE_URL automatically)
# For local development, use individual vars:
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=chalkdb

# Or use a connection string (Railway style):
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/chalkdb

# Redis (optional)
REDIS_URL=localhost:6379

# JWT Authentication (configure these yourself)
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRATION_HOURS=24

# OAuth Providers (configure these yourself)
# Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Facebook
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# Apple
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=

# External integrations
REVENUECAT_API_KEY=
REVENUECAT_WEBHOOK_SECRET=
EXPO_ACCESS_TOKEN=
OPENFOODFACTS_USER_AGENT=ChalkAPI/1.0

# Outbox worker tuning
OUTBOX_POLL_INTERVAL_SECONDS=2
OUTBOX_BATCH_SIZE=25
OUTBOX_MAX_ATTEMPTS=8
OUTBOX_STUCK_THRESHOLD_SECONDS=600
